<%= if @live_action in [:new, :edit] do %>
  <%= live_modal @socket, GatherWeb.ConversationLive.FormComponent,
    id: @conversation.id || :new,
    title: @page_title,
    action: @live_action,
    conversation: @conversation,
    return_to: Routes.conversation_index_path(@socket, :index) %>
<% end %>

<div class="flex flex-wrap">
  <div class="w-full md:w-2/3">
    <div class="card shadow">
      <div class="card-header">
        <h5 class="card-title">
          Listing Conversations
        </h5>
        <%= live_patch to: Routes.conversation_index_path(@socket, :new), class: "btn btn-icon btn-sm btn-light" do %>
          <svg fill="currentColor" width="24" height="24" viewBox="0 0 20 20" stroke-width="2"><path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
        <% end %>
      </div>
      <div class="card-body prose max-w-full">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>

              <th></th>
            </tr>
          </thead>
          <tbody id="conversations">
<%= for conversation <- @conversations do %>
            <tr id="conversation-<%= conversation.id %>">
              <td><%= conversation.title %></td>

              <td class="text-right">
                <span><%= live_redirect "Show", to: Routes.conversation_show_path(@socket, :show, conversation) %></span>
                <span><%= live_patch "Edit", to: Routes.conversation_index_path(@socket, :edit, conversation) %></span>
                <span><%= link "Delete", to: "#", phx_click: "delete", phx_value_id: conversation.id, data: [confirm: "Are you sure?"] %></span>
              </td>
            </tr>
<% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
